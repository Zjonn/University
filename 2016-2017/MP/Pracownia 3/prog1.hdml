def isPrime(A) =
	if A = 2 then 1
	else if A < 2 then 0
	else isPrime2(2,A)
	
def isPrime2(A,B) =
	if A * A > B then 1
	else if B % A = 0 then 0
	else isPrime2(A+1,B)
	
def pow(A,B,C) =
	if B = 0 then A
	else pow(A*C,B-1,C)


	

